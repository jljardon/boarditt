<h2>Hello
  <%=current_user.username%>!</h2>
<div>
  <h3>
    <a href="/users/<%=current_user.slug%>">Your account</a>
  </h3>
</div>
<hr>

<div>
  <h3>
    <a href="/posts/new">Create new post</a>
  </h3>
</div>
<hr>
<h2>All posts</h2>
<%Post.all.each do |post|%>
  <ul>
    <li>
      <a href="/posts/<%=post.id%>/<%=post.slug%>"><%=post.title%></a>
      -
      <a href="/users/<%=post.user.slug%>"><%=post.user.username%></a>
    </li>
  </ul>
<%end%>
