<h2>User -
  <%=@user.username%>
</h2>

<h3>Posts</h3>
<%@user.posts.each do |post|%>
  <ul>
    <li>
      <a href="/posts/<%=post.id%>/<%=post.slug%>">
        <%=post.title%></a>
    </li>
  </ul>
<%end%>
<hr>
<h3>Comments</h3>
<table>
  <%@user.comments.each do |comment|%>

    <tr>
      <td>
        <a href="/posts/<%=comment.post.id%>/<%=comment.post.slug%>"><%=comment.post.title%></a>
      </td>
      <td>
        -
        <%=comment.content%></td>
    </tr>
  <%end%>
</table>
