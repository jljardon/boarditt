<h1>User -
  <%=@user.username%>
</h1>

<h3>Posts</h3>
<%@user.posts.each do |post|%>
  <ul>
    <li>
      <a href="/posts/<%=post.id%>/<%=post.slug%>">
        <%=post.title%></a>

    </li>
  </ul>
<%end%>

<h3>Comments</h3>
<%@user.comments.each do |comment|%>
  <ul>
    <li>
      <%=comment.content%>
      in
      <a href="/posts/<%=comment.post.id%>/<%=comment.post.slug%>"><%=comment.post.title%></a>
    </li>
  </ul>
<%end%>
